<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

    <application>
        <locale-config>
            <default-locale>de</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>lang.lang</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <managed-bean>
    	<managed-bean-name>userBean</managed-bean-name>
    	<managed-bean-class>webeng.presentation.managedbeans.UserManagedBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
	<managed-bean>
    	<managed-bean-name>productBean</managed-bean-name>
    	<managed-bean-class>webeng.presentation.managedbeans.ProductManagedBean</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>transactionBean</managed-bean-name>
    	<managed-bean-class>webeng.presentation.managedbeans.TransactionManagedBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
    	<display-name>pages/registrierung.xhtml</display-name>
    	<from-view-id>/pages/registrierung.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userBean.registrieren}</from-action>
    		<from-outcome>register_success</from-outcome>
    		<to-view-id>/pages/login.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>pages/login.xhtml</display-name>
    	<from-view-id>/pages/login.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userBean.login}</from-action>
    		<from-outcome>login_success</from-outcome>
    		<to-view-id>/pages/startseite.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>pages/login.xhtml</display-name>
    	<from-view-id>/pages/login.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userBean.login}</from-action>
    		<from-outcome>login_failed</from-outcome>
    		<to-view-id>/pages/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>pages/registrierung.xhtml</display-name>
    	<from-view-id>/pages/registrierung.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{userBean.registrieren}</from-action>
    		<from-outcome>register_failed</from-outcome>
    		<to-view-id>/pages/registrierung.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
</faces-config>